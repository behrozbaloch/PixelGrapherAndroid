<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ffffff">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView_imagefragment" android:layout_centerInParent="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/footer_textView_imageFragment"
                android:textColor="#ffffff"
                android:background="#000000" android:alpha="0.3" android:textSize="20dp"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"/>
        <Space
                android:layout_width="20px"
                android:layout_height="10px"
                android:id="@+id/space"
                android:layout_above="@+id/footer_textView_imageFragment" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header_textView_imagefragment"
                android:layout_above="@+id/space" android:textSize="25dp"
                android:textColor="#ffffff" android:background="#000000" android:alpha="0.3"
                android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</LinearLayout>