<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ffffff">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="#ffffff">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved Functions"
                android:id="@+id/textView"
                android:gravity="center_vertical|center_horizontal" android:textSize="25dp"
                android:textColor="#848484" android:background="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_alignRight="@+id/android:list" android:layout_alignLeft="@+id/android:list"/>
        <ExpandableListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/android:list"
                android:layout_below="@+id/textView1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView" android:layout_alignRight="@+id/textView"
                android:layout_alignLeft="@+id/textView" android:background="@drawable/coloredbar"/>
    </RelativeLayout>
</LinearLayout>